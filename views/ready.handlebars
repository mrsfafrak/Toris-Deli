<!--  This is html file for ready to pick up orders. -->

<div class="menu">
  <br>

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">Tori's Deli
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
          <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
              <a class="nav-link" href="/menu">Menu</a>
          </li>
          <li class="nav-item">
              <a class="nav-link active" href="/orders">Check Kitchen<span class="sr-only">(current)</span></a>
          </li>
          </ul>
      </div>
  </nav>

  <div class="menu-title ">
      <h1 class="animated fadeIn">Tori's Deli</h1> 
  </div>

  <div id="card-wrap">
  
    <div id="card-menu">
          <div class="completed">
          <h2 class="ordered-title">Ready for pick up</h2>
          <ul class="completed-orders">
          
          {{#each dishes}}
            {{#if this.ready}}
            <li  data-id="{{this.id}}" class="list-group-item animated fadeInUpBig">
              <p class="ticket-font">Order: {{this.text}} </p>
              <p class="ticket-font">Ticket # {{this.id}}</p>
              <button class="btn btn-success float-center delete">Pick Up</button>
            </li>
            {{/if}}
          {{/each}}
          </ul>
      </div>
    </div>

  </div>
</div> 
